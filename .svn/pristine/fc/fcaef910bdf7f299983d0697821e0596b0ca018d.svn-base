.reporte {
    width: 100%;
    max-width: 460px;
    position: absolute;
    *margin-top:-222px;
    *position: relative;
    top: 85px;
    left: 0;
    right: 0;
    margin-left: auto;
    margin-right: auto;
    z-index: 99999;
    @media #{$mobile} {
        top: 185px;
        max-width: inherit;
    }

    .contenedor {
        width: 100%;
        *width: 460px;
        background-color: white;
        margin: 0 auto;
        position: relative;
        padding-top: 31px;
        margin-top: -3px;
        *margin: -4px auto 0 auto;
        @media #{$mobile} {
            margin-top: -3px;
            *margin-top: -4px;
            min-height: 380px;
            *height: 380px;
        }
        .imagen-triangle {
            width: 100%;
            h2 {
                font-size: 18px;
                font-weight: 300;
            }
        }
    }
    .formulario {
        width: 100%;
        max-width: 320px;
        margin: 0 auto;
        @media #{$mobile} {
            max-width: 286px;
}
        .text-seleccione{
            margin-bottom: 42px;
            margin-top: 15px;
        }
    }
    .form-row {
        margin-bottom: 22px;
        .form-column {
            display: inline-block;
            zoom: 1;
            /*ie7*/
            width: 100%;
            *display: inline;
            /*ie7*/
            vertical-align: top;
            label {
                font-family: 'Roboto', sans-serif;
                font-weight: 400;
                font-size: 15px;
                &.position-relative{
                    position: relative;
                    top: -9px;
                }
            }
            .fecha-cont{
                margin-top: 4px;
                input,img{
                    display: inline-block;
                    *display: inline;
                    zoom: 1;
                    vertical-align: top;
                }
                input{
                    width: 62%;
                    padding-left: 9%;
                    @media #{$mobile} {
                        width: 80%;
                }
                }
            img{
                cursor: pointer;
            }
            }
            input {
                margin-right: 3%;
                font-size: 21px;
                border: 1px solid #ccc;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                background-color: white;
                max-width: 260px;
                height: 25px;
                font-family: 'Roboto', sans-serif;
                font-weight: 400;
                height: 37px;
                max-width: 273px;
                line-height: 1;
            }
            span {
                display: block;
                font-size: 12.5px;
                color: #ccc;
            }
        }
    }

    .button {
        width: 100%;
        margin-top: 67px;
        text-align: left;
    }
    .button input {
        float: none;
        background-color: #8ABA42;
        color: white;
        width: 84%;
        height: 50px;
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
        font-size: 22px;
        border: none;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        cursor: pointer;
        @media #{$mobile} {
            width: 100%;
}
    }

.validacion {
        *width: 56%;
    }
}

// calendario de jquery ui
.ui-datepicker {
    width: 284px;
    height: 305px;
    padding-top: 10px;
    margin-top: 10px;
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    border-radius: 15px;

    -moz-box-shadow: 3px 6px 12px 0px #ccc;
    -webkit-box-shadow: 3px 6px 12px 0px #ccc;
    box-shadow: 3px 6px 12px 0px #ccc;
}

.ui-widget {
    font-family: 'Roboto', sans-serif;
    font-weight: 400;
    font-size: 13px;
}

.ui-datepicker-title {
    color: #3D9FC1;
    font-family: Helvetica, sans-serif;
    font-weight: 700;
    font-size: 13px;
}

.ui-datepicker-year{
    display: none;
}

.ui-widget-header {
    border: none;
    background: white;
    margin-bottom: 13px;
}

.ui-datepicker-calendar {
    color: #004C8C;
    font-family: Helvetica, sans-serif;
    font-weight: 700;
    font-size: 13px;
    margin-top: 13px;
}

a.ui-state-default {
    background: white !important;
    border: none !important;
    font-weight: bold !important;
    text-align: center !important;
    color: #AEAEAE !important;
    font-size: 13px !important;
}

.ui-datepicker td {
    padding: 9px;
}

a.ui-priority-secondary{
  //  color: #F2F2F2 !important;
    color: #CCC!important;
    font-size: 13px!important;
}

a.ui-state-hover {
    background: white;
    background-color: white;
}

.ui-datepicker-prev {
    left: 19px!important;
}

.ui-datepicker-next {
    right: 19px!important;
}

.ui-icon.ui-icon-circle-triangle-e{
    background-image: url("../img/desktop-calendar-right.gif");
    background-position: 0;
}

.ui-icon.ui-icon-circle-triangle-w{
    background-image: url("../img/desktop-calendar-left.gif");
    background-position: 0;
}

.ui-datepicker th {
    padding-bottom: 15px;
}

.ui-datepicker-today{
//    position: relative;
}

.ui-state-default.ui-state-highlight{
    -webkit-border-radius: 30px;
    -moz-border-radius: 30px;
    border-radius: 30px;
    background: #002566!important;
    color: white!important;

}

.ui-state-default.ui-state-active{
    -webkit-border-radius: 30px;
    -moz-border-radius: 30px;
    border-radius: 30px;
    background: #AEAEAE !important;
    color: white!important;
}
